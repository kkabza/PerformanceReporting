# Environment configuration for Florida Tax Certificate Sale application
# Copy this file to .env and modify as needed

# Application environment
FLASK_ENV=development  # development, production, or testing

# Flask settings
FLASK_APP=app.py
SECRET_KEY=set-this-in-production

# Build information
APP_VERSION=0.1.0
BUILD_VERSION=BUILD-20250331-dev
GIT_HASH=

# Database connection
DATABASE_URL=sqlite:///instance/app.db
DEV_DATABASE_URL=sqlite:///instance/dev.db
TEST_DATABASE_URL=sqlite:///:memory:

# Redis cache and session (for production)
REDIS_URL=redis://localhost:6379/0

# Sentry error tracking
SENTRY_DSN=

# Feature flags
FEATURE_DEMO_MODE=true
FEATURE_DEBUG_TOOLBAR=true 