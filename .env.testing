# Testing environment configuration
FLASK_ENV=testing
FLASK_APP=app.py
FLASK_DEBUG=0

# Secrets (safe for testing)
SECRET_KEY=testing-key-not-for-production

# Build information
APP_VERSION=0.1.0
BUILD_VERSION=BUILD-TESTING
GIT_HASH=test

# Database - use in-memory database for tests
TEST_DATABASE_URL=sqlite:///:memory:

# Disable Sentry in tests
SENTRY_DSN=

# Feature flags for testing
FEATURE_DEMO_MODE=true
FEATURE_DEBUG_TOOLBAR=false

# Application Insights
# Replace these with your Azure AD app details
AZURE_TENANT_ID="YOUR_TENANT_ID"
AZURE_CLIENT_ID="YOUR_CLIENT_ID"
AZURE_CLIENT_SECRET="YOUR_CLIENT_SECRET"

# Application Insights App ID
APP_INSIGHTS_APPLICATION_ID="b1a6e0c7-3049-45ef-8323-ef54fab6f5a2" 